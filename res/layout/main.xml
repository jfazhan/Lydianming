<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/root_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="550dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/mainLinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#33eeaaee"
            android:orientation="horizontal" >
            
            <ImageView
                android:id="@+id/fanjiantozhuye"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_weight="0.0"
                android:src="@drawable/title_home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="蓝牙点名"
                android:textColor="#4F2F4F"
                android:textSize="20.0dip"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/helpImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.0"
                android:background="@null"
                android:src="@drawable/moji_about" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/top_tool"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mainLinearLayout"
            android:layout_margin="10.0dip"
            android:layout_marginTop="15dp"
            android:background="@drawable/background_login_input"
            android:orientation="vertical"
            android:paddingBottom="10.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="10.0dip" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="TextView"
                android:textColor="#4F2F4F"
                android:textSize="30sp" />

            <DatePicker
                android:id="@+id/datePicker1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />   <!-- 设置不显示 -->
        </LinearLayout>
        
     	 <Button   
            android:id="@+id/xsdm"  
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_alignLeft="@+id/top_tool"
            android:layout_below="@+id/top_tool"
            android:layout_marginTop="22dp"
            android:background="@drawable/background_login_input"
            android:drawableLeft="@drawable/xsdm"
            android:text="学生点名"
            android:textColor="#4F2F4F"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/xsmd"  
            android:layout_width="150dp"
            android:layout_height="80dp"
              android:layout_above="@+id/cqjl"
              android:layout_alignRight="@+id/top_tool"
              android:background="@drawable/background_login_input"
              android:drawableLeft="@drawable/xsmd"
              android:text="学生名单"
              android:textColor="#4F2F4F"
              android:textSize="15sp"
              android:textStyle="bold" />

        <Button
            android:id="@+id/cqjl"    
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_alignLeft="@+id/xsdm"
            android:layout_below="@+id/xsdm"
            android:layout_marginTop="23dp"
            android:background="@drawable/background_login_input"
            android:drawableLeft="@drawable/cqju"
            android:text="出勤记录"
            android:textColor="#4F2F4F"
            android:textSize="15dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/bjdr"		
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_alignBaseline="@+id/cqjl"
            android:layout_alignBottom="@+id/cqjl"
            android:layout_alignLeft="@+id/xsmd"
            android:background="@drawable/background_login_input"
            android:drawableLeft="@drawable/bjdr"
            android:text="班级导入"
            android:textColor="#4F2F4F"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/gy"     
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_alignLeft="@+id/cqjl"
            android:layout_below="@+id/cqjl"
            android:layout_marginTop="23dp"
            android:background="@drawable/background_login_input"
            android:drawableLeft="@drawable/gy"
            android:text="关于"
            android:textColor="#4F2F4F"
            android:textSize="15dp"
            android:textStyle="bold" />
        
        <Button
            android:id="@+id/bz"    
           android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_alignLeft="@+id/bjdr"
            android:layout_alignTop="@+id/gy"
            android:background="@drawable/background_login_input"
            android:drawableLeft="@drawable/bz"
            android:text="帮助"
            android:textColor="#4F2F4F"
            android:textSize="15dp"
            android:textStyle="bold" />
		<Button
              android:id="@+id/moreButton" 
              android:layout_width="150dp"
            android:layout_height="80dp"
              android:layout_alignLeft="@+id/gy"
              android:layout_alignRight="@id/bz"
              android:layout_alignParentBottom="true"
              android:background="@drawable/background_login_input"
              android:drawableLeft="@drawable/more"
              android:text="更多功能"
              android:textColor="#4F2F4F"
              android:textSize="30dp"
              android:textStyle="bold" />
     
    </RelativeLayout>

</LinearLayout>